{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "HLS Gold",
  "type": "object",
  "required": [
    "sut",
    "mode",
    "stories"
  ],
  "properties": {
    "sut": {
      "type": "string"
    },
    "mode": {
      "type": "string",
      "enum": [
        "det",
        "nondet"
      ]
    },
    "stories": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "story_id",
          "entity",
          "op",
          "params",
          "blocks",
          "checks"
        ],
        "properties": {
          "story_id": {
            "type": "string"
          },
          "entity": {
            "type": "string"
          },
          "op": {
            "type": "string",
            "enum": [
              "add",
              "delete",
              "update"
            ]
          },
          "params": {
            "type": "object"
          },
          "blocks": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "op",
                "keyFields"
              ],
              "properties": {
                "op": {
                  "type": "string",
                  "enum": [
                    "add",
                    "delete",
                    "update"
                  ]
                },
                "keyFields": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "checks": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "type"
              ],
              "properties": {
                "type": {
                  "type": "string",
                  "enum": [
                    "exists",
                    "absent",
                    "fieldsEqual",
                    "updated"
                  ]
                },
                "entity": {
                  "type": "string"
                },
                "key": {
                  "type": "string"
                },
                "fields": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "expected": {}
              }
            }
          }
        }
      }
    }
  }
}