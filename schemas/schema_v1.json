{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "GOLD Schema v1",
  "type": "object",
  "required": [
    "events"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "v1"
    },
    "meta": {
      "type": "object"
    },
    "events": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "name",
          "method",
          "path"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "method": {
            "type": "string",
            "enum": [
              "GET",
              "POST",
              "PUT",
              "PATCH",
              "DELETE",
              "HEAD",
              "OPTIONS"
            ]
          },
          "path": {
            "type": "string",
            "pattern": "^/"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "request": {
            "type": "object"
          },
          "response": {
            "type": "object"
          },
          "auth": {
            "type": "string"
          },
          "notes": {
            "type": "string"
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}